{
  "name": "epub-tokenizer-counter",
  "version": "1.0.0",
  "type": "module",
  "description": "Count words and tokens in EPUB files",
  "workspaces": [
    "packages/shared",
    "web",
    "server"
  ],
  "dependencies": {
    "@anthropic-ai/tokenizer": "^0.0.4",
    "@gxl/epub-parser": "^2.0.4",
    "@huggingface/transformers": "^3.8.1",
    "@microsoft/fetch-event-source": "^2.0.1",
    "class-variance-authority": "^0.7.1",
    "cli-progress": "^3.12.0",
    "cli-table3": "^0.6.3",
    "clsx": "^2.1.1",
    "commander": "^12.0.0",
    "js-tiktoken": "^1.0.21",
    "lucide-react": "^0.563.0",
    "p-limit": "^7.2.0",
    "sonner": "^2.0.7",
    "tailwind-merge": "^3.4.0"
  },
  "devDependencies": {
    "@types/cli-progress": "^3.11.6",
    "@types/node": "^22.19.7",
    "autoprefixer": "^10.4.23",
    "concurrently": "^9.2.1",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.18",
    "tailwindcss-animate": "^1.0.7",
    "typescript": "^5.6.0"
  },
  "scripts": {
    "postinstall": "npm run build:shared",
    "build": "npm run build:shared && npm run build:web && npm run build:server && tsc",
    "build:shared": "npm run build --workspace=packages/shared",
    "build:web": "npm run build --workspace=web",
    "build:server": "npm run build --workspace=server",
    "start": "node dist/cli/index.js",
    "dev": "concurrently \"npm run dev:server\" \"npm run dev:web\"",
    "dev:server": "npm run dev --workspace=server",
    "dev:web": "npm run dev --workspace=web",
    "dev:ui": "npm run dev"
  }
}
